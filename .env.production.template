# Production Environment Variables Template
# Copy this to .env and fill in your actual values

# ==================== ZERODHA API (REQUIRED) ====================
# Get these from https://kite.zerodha.com/
ZERODHA_API_KEY=your_api_key_here
ZERODHA_API_SECRET=your_api_secret_here
ZERODHA_REDIRECT_URL=https://your-domain.com/auth/callback

# ==================== SECURITY (REQUIRED) ====================
# Generate a strong random string (32+ characters)
# Example: openssl rand -base64 32
JWT_SECRET=your-very-secure-random-string-min-32-chars

# ==================== REDIS (RECOMMENDED) ====================
# Use internal Docker network redis service
REDIS_URL=redis://redis:6379

# ==================== MARKET CONFIGURATION ====================
MARKET_SYMBOLS=NIFTY 50,NIFTY BANK,SENSEX

# ==================== CORS (REQUIRED) ====================
# Add your production domain(s)
CORS_ORIGINS=https://your-domain.com,https://www.your-domain.com

# ==================== ENVIRONMENT ====================
ENVIRONMENT=production
ENABLE_SCHEDULER=true

# ==================== FRONTEND (REQUIRED) ====================
# Update with your actual domain
NEXT_PUBLIC_API_URL=https://api.your-domain.com
NEXT_PUBLIC_WS_URL=wss://api.your-domain.com/ws/market
NEXT_PUBLIC_MARKET_SYMBOLS=NIFTY 50,NIFTY BANK,SENSEX
NODE_ENV=production
