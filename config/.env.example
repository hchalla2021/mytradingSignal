# ==============================================================================
# MyTradingSignal - Environment Variables Configuration
# ==============================================================================
# Copy this file to .env and fill in your actual credentials
# NEVER commit the .env file to version control
# ==============================================================================

# Zerodha Kite Connect API Credentials
# Get these from: https://kite.zerodha.com/
# Guide: https://kite.trade/docs/connect/v3/
ZERODHA_API_KEY=your_api_key_here
ZERODHA_API_SECRET=your_api_secret_here
ZERODHA_ACCESS_TOKEN=your_access_token_here
REDIRECT_URL=http://localhost:3000/auth/callback

# Twilio WhatsApp Configuration
# Get these from: https://www.twilio.com/console
# WhatsApp Sandbox: https://www.twilio.com/console/sms/whatsapp/sandbox
TWILIO_ACCOUNT_SID=your_account_sid_here
TWILIO_AUTH_TOKEN=your_auth_token_here
TWILIO_PHONE_NUMBER=whatsapp:+14155238886
ALERT_PHONE_NUMBER=whatsapp:+1234567890

# Alert Configuration
# SIGNAL_STRENGTH_THRESHOLD: Min confidence level to trigger alerts (0-100)
# ALERT_COOLDOWN_MINUTES: Wait time between repeated alerts
SIGNAL_STRENGTH_THRESHOLD=75
ALERT_COOLDOWN_MINUTES=15

# OpenAI API Configuration
# Get your API key from: https://platform.openai.com/api-keys
# Used for AI-powered option chain analysis
OPENAI_API_KEY=your_openai_api_key_here

# Server Configuration
# PORT: Backend server port (default: 8000)
# HOST: Server bind address (0.0.0.0 for all interfaces)
PORT=8000
HOST=0.0.0.0
