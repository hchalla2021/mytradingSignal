# ==============================================================================
# MyDailyTradingSignals Frontend - Environment Variables
# ==============================================================================

# ==================== BACKEND URLs ====================
# Switch between LOCAL and PRODUCTION by commenting/uncommenting

# LOCAL DEVELOPMENT (for localhost testing)
NEXT_PUBLIC_API_URL=http://localhost:8000

# PRODUCTION DEPLOYMENT (comment above line and uncomment below)
# NEXT_PUBLIC_API_URL=https://mydailytradesignals.com

# ==================== FEATURES ====================
NEXT_PUBLIC_ENABLE_AI_ANALYSIS=false
NEXT_PUBLIC_MARKET_REFRESH_INTERVAL=3000

# ==================== FRONTEND SETTINGS ====================
# Refresh interval for polling components (milliseconds)
NEXT_PUBLIC_REFRESH_INTERVAL=3000

# Advanced signals refresh interval (milliseconds)
NEXT_PUBLIC_ADVANCED_REFRESH_INTERVAL=3000

# WebSocket reconnect delay (milliseconds)
NEXT_PUBLIC_WS_RECONNECT_DELAY=3000

# WebSocket ping interval (milliseconds)
NEXT_PUBLIC_WS_PING_INTERVAL=25000

# Request timeout for API calls (milliseconds)
NEXT_PUBLIC_API_TIMEOUT=5000

# Data freshness threshold (milliseconds)
NEXT_PUBLIC_DATA_FRESHNESS_MS=60000

# ==================== MARKET CONFIGURATION ====================
# Market symbols to track (comma-separated)
NEXT_PUBLIC_MARKET_SYMBOLS=NIFTY,BANKNIFTY,SENSEX

# API Endpoints (customize if backend routes change)
NEXT_PUBLIC_ZONE_CONTROL_ENDPOINT=/api/advanced/zone-control
NEXT_PUBLIC_VOLUME_PULSE_ENDPOINT=/api/advanced/volume-pulse
NEXT_PUBLIC_TREND_BASE_ENDPOINT=/api/advanced/trend-base

# ==================== OPTIONAL: EXTERNAL APIS ====================
# Add any external API keys here (not currently used)
# NEXT_PUBLIC_ANALYTICS_ID=your_analytics_id
# NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn

NODE_OPTIONS=--max-old-space-size=2048
