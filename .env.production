# Production Environment Variables
# Copy this to config/.env and fill in your production values

# ============================================================
# ZERODHA API CREDENTIALS (Required)
# ============================================================
ZERODHA_API_KEY=your_production_api_key_here
ZERODHA_API_SECRET=your_production_api_secret_here
ZERODHA_ACCESS_TOKEN=

# Production redirect URL - Replace with your actual domain
REDIRECT_URL=https://yourdomain.com/auth/callback

# ============================================================
# TWILIO WHATSAPP CREDENTIALS (Optional)
# ============================================================
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=
ALERT_PHONE_NUMBER=

# ============================================================
# ALERT SETTINGS
# ============================================================
SIGNAL_STRENGTH_THRESHOLD=90
ALERT_COOLDOWN_MINUTES=15

# ============================================================
# AI FEATURES (Optional)
# ============================================================
OPENAI_API_KEY=

# ============================================================
# SERVER SETTINGS
# ============================================================
PORT=8000
HOST=0.0.0.0
