# ========================================
# PRODUCTION ENVIRONMENT VARIABLES
# Copy this to .env in production
# ========================================

# ==========================================
# ZERODHA API CREDENTIALS (REQUIRED)
# ==========================================
ZERODHA_API_KEY=your_api_key_here
ZERODHA_API_SECRET=your_api_secret_here
ZERODHA_ACCESS_TOKEN=auto_generated_daily

# ==========================================
# PRODUCTION URLs (UPDATE FOR YOUR DOMAIN)
# ==========================================
# Backend redirect URL (must match Zerodha app settings)
REDIRECT_URL=https://yourdomain.com/api/auth/callback

# Frontend URL (where users access the app)
FRONTEND_URL=https://yourdomain.com

# API Base URL (backend)
NEXT_PUBLIC_API_URL=https://yourdomain.com

# WebSocket URL (backend)
NEXT_PUBLIC_WS_URL=wss://yourdomain.com/ws/market

# ==========================================
# REDIS CONFIGURATION
# ==========================================
REDIS_URL=redis://redis:6379

# ==========================================
# SECURITY
# ==========================================
# Generate with: openssl rand -hex 32
JWT_SECRET=your_secure_random_secret_here

# ==========================================
# SERVER CONFIGURATION
# ==========================================
HOST=0.0.0.0
PORT=8000

# ==========================================
# CORS CONFIGURATION
# ==========================================
# Comma-separated list of allowed origins
CORS_ORIGINS=https://yourdomain.com

# ==========================================
# OPTIONAL: NEWS API (For news detection)
# ==========================================
NEWS_API_KEY=your_newsapi_key_here
NEWS_API_URL=https://newsapi.org/v2

# ==========================================
# PRODUCTION MODE
# ==========================================
NODE_ENV=production
PYTHON_ENV=production
